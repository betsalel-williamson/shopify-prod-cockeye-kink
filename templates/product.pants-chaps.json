isabled selected>â€”<\/option>\n        {% for i in (1..600) %}\n          {% assign val = i | times: 0.5 %}\n          <option value=\"{{ val | round:2 }}\">{{ val | round:2 }}<\/option>\n        {% endfor %}\n      <\/select>\n    <\/div>\n  {% endfor %}\n<\/div>\n\n<script>\n  document.addEventListener('DOMContentLoaded', function() {\n    var requiredIds = [\"waist\",\"upper-thigh\",\"lower-thigh\",\"knee\",\"upper-calf\",\"lower-calf\",\"ankle\",\"inseam\",\"outseam\",\"crotch-buckle-to-inseam\"];\n    var selects = requiredIds.map(function(id) {\n      return document.getElementById(id);\n    });\n\n    var form = document.getElementById('product-form-{{ section.id }}');\n    var nativeButtons = form.querySelectorAll('button[type=\"submit\"], input[type=\"submit\"]');\n    var dynamicButtons = document.querySelectorAll(\n      '#dynamic-checkout-button, ' +\n      '.shopify-payment-button, ' +\n      '.shopify-payment-button__button, ' +\n      '.additional-checkout-button'\n    );\n\n    var allButtons = Array.prototype.slice.call(nativeButtons)\n                     .concat(Array.prototype.slice.call(dynamicButtons));\n\n    allButtons.forEach(function(btn) {\n      btn.style.display = 'none';\n    });\n\n    function checkAllFilled() {\n      var allFilled = selects.every(function(s) {\n        return s && s.value;\n      });\n      allButtons.forEach(function(btn) {\n        btn.style.display = allFilled ? '' : 'none';\n      });\n    }\n\n    selects.forEach(function(s) {\n      if (s) s.addEventListener('change', checkAllFilled);\n    });\n\n    checkAllFilled();\n  });\n<\/script>"}},"text_47yRVa":{"type":"text","settings":{"text":"<strong>We will attempt to contact you if any measurements are missing. Otherwise the order may be refunded and cancelled.<\/strong>","text_style":"body"}},"buy_buttons":{"type":"buy_buttons","settings":{"show_dynamic_checkout":true,"show_gift_card_recipient":false}},"description":{"type":"description","settings":{}},"collaps